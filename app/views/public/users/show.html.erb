<div class='container px-5 px-sm-0'>
  <div class='row d-flex justify-content-center'>
    <div class='col-sm-10 pt-2'>
      <div class="media">
        <%= image_tag @user.get_profile_image, size:'100x100', style: 'border-radius: 50%; overflow: hidden; margin-right: 10px; background-color: white;' %>
        <div class="media-body">
          <h5 class="mt-0"><%= @user.name %>
            <div id="follow_btn_<%= @user.id %>">
              <%= render "public/relationships/follow_btn", user: @user %>
            </div>
            <div id="follower_count">
              <%= render "public/relationships/count", user: @user %>
            </div>
          </h5>
          <%= @user.profile %>
        </div>
      </div>
      <% @posts.each do |post| %>
      <div class="col-sm-10 py-2">
        <div class="card">
          <div class="card-header">
            <%= link_to post.category.category_name, root_path, class: "btn btn-sm btn-success" %>
          </div>
          <div class="card-body">
            <!--<div class="card-title">-->
            <!--  < %= link_to user_path(post.user.id) do %>-->
            <!--    < %= image_tag post.user.get_profile_image, size:'50x50', style: 'border-radius: 50%; overflow: hidden; margin-right: 10px;' %>-->
            <!--    < %= post.user.name %>-->
            <!--  < % end %>-->
            <!--</div>-->
            <div style="display: flex; flex-direction: row; align-items: center;">
              <h2 style="flex: 1;"><%= link_to post.title, post_path(post.id) %></h2>
              <div style="display: flex; gap: 10px;">
                <p class="badge badge-light">
                  <% post.tags.each do |t| %>
                    <%= link_to "##{t.tag_name}", root_path %>
                  <% end %>
                </p>
                <p class="badge badge-pill badge-primary">
                  いいね数<%= post.favorites.count %>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>