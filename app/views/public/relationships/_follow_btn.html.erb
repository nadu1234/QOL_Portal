<% if user_signed_in? %>
  <% if current_user != user %>
    <% if current_user.following?(user) %>
      <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class:"button_on", remote: true %>
    <% else %>
      <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class:"button", remote: true %>
    <% end %>
  <% end %>
<% end %>