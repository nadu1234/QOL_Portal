<div class="container pt-5">
  <div class="row">
    <div class="col-sm-5 py-3" style="border-radius: 5%; background-color: white; border-radius: 20px; border: 2mm ridge rgba(187, 187, 187, .41);">
      <h3>カテゴリ一覧・追加</h3>
      <% if @category.errors.any? %>
      <div class="alert alert-danger">
        <strong><%= @category.errors.count %>件のエラーが出たので登録できませんでした。</strong>
        <ul>
          <% @category.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end%>
        </ul>
      </div>
      <% end %>
    
      <%= form_with model:@category, url: admin_categories_path, method: :post, local:true do |f| %>
        <div class="form-group">
          <%= f.label :category_name, "カテゴリ名" %>
          <%= f.text_field :category_name, placeholder: "カテゴリ名",  class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.submit "新規登録", class: 'btn btn-outline-success' %>
        </div>
      <% end %>
    </div>
  </div>


<br>
<br>
<table class='table table-hover table-inverse'>
  <thead class="thead-light">
    <tr>
     <th>カテゴリ</th>
     <th></th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr class="table-light">
        <td><%= category.category_name %></td>
        <td><%= link_to "編集する", edit_admin_category_path(category.id), method: :get, class: 'btn btn-outline-dark' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>